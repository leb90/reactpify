{% comment %}
  WelcomeBanner Section - Auto-generated with Metaobject Support
  Liquid template that renders SSR data and prepares React hydration
{% endcomment %}

{% schema %}
{
  "name": "Welcome Banner",
  "tag": "section",
  "class": "welcome-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "WelcomeBanner Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "Sample title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle",
      "default": "Sample subtitle"
    },
    {
      "type": "color",
      "id": "backgroundcolor",
      "label": "background Color",
      "default": "#3b82f6"
    }
  ],
  "presets": [
    {
      "name": "Welcome Banner"
    }
  ]
}
{% endschema %}

{%- liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign backgroundcolor = section.settings.backgroundcolor
-%}

<section class="welcome-banner-section" id="welcome-banner-section-{{ section.id }}">
  
  {%- comment -%} React Component Root {%- endcomment -%}
  <div data-component-root="WelcomeBanner" class="welcome-banner-container">
    
    {%- comment -%} JSON data for React - Script with data-section-data {%- endcomment -%}
    <script type="application/json" data-section-data>
      {
        "componentName": "WelcomeBanner",
        "title": {{ title | json }},
        "subtitle": {{ subtitle | json }},
        "backgroundColor": {{ backgroundcolor | json }},
        "settings": {
          "title": {{ title | json }},
        "subtitle": {{ subtitle | json }},
        "backgroundColor": {{ backgroundcolor | json }},
          "sectionId": "{{ section.id }}"
        }
      }
    </script>

    {%- comment -%} Smart Fallback Content - Shows if JavaScript doesn't load {%- endcomment -%}
    <div class="welcome-banner-fallback" style="display: block;">
      <div style="
        position: relative;
        overflow: hidden;
        border-radius: 1.5rem;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
        backdrop-filter: blur(4px);
        background: linear-gradient(to bottom right, #3b82f6, #2563eb, #7c3aed);
        color: white;
        padding: 2rem;
    text-align: center;
        border: 1px solid rgba(255, 255, 255, 0.2);
        margin: 2rem auto;
        max-width: 800px;
      ">
        <div style="position: relative; z-index: 10;">
          <h2 style="
            font-size: 3rem;
            font-weight: 900;
            margin-bottom: 1.5rem;
            line-height: 1;
            background: linear-gradient(to right, white, white, rgba(255,255,255,0.9));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
          ">
            ðŸš€ {% if title %}{{ title }}{% else %}Welcome to Reactpify!{% endif %}
          </h2>
          
          {% if subtitle %}
            <p style="
              font-size: 1.25rem;
              margin-bottom: 2rem;
              opacity: 0.9;
              line-height: 1.625;
              max-width: 600px;
              margin-left: auto;
              margin-right: auto;
            ">{{ subtitle }}</p>
          {% endif %}
          
          <p style="
            font-size: 0.875rem;
            opacity: 0.8;
            margin-top: 2rem;
            padding: 0.5rem 1rem;
            background: rgba(255,255,255,0.1);
            border-radius: 0.5rem;
            display: inline-block;
          ">
            âœ¨ React component loading...
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Hide fallback when React component loads */
  .welcome-banner-container:has(.reactpify-component) .welcome-banner-fallback {
    display: none !important;
  }
  
  /* Additional fallback cleanup */
  [data-component-root="WelcomeBanner"]:has(.reactpify-component) .welcome-banner-fallback {
    display: none !important;
  }
</style>