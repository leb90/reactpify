{% comment %}
  WelcomeBanner Section - Auto-generated
  Liquid template that renders SSR data and prepares React hydration
{% endcomment %}

{% schema %}
{
  "name": "Welcome Banner",
  "tag": "section",
  "class": "welcome-banner-section",
  "settings": [
    {
      "type": "header",
      "content": "WelcomeBanner Settings"
    },
    {
      "type": "text",
      "id": "title",
      "label": "title",
      "default": "Sample title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "subtitle",
      "default": "Sample subtitle"
    },
    {
      "type": "text",
      "id": "backgroundcolor",
      "label": "background Color"
    }
  ]
}
{% endschema %}

{%- liquid
  assign title = section.settings.title
  assign subtitle = section.settings.subtitle
  assign backgroundcolor = section.settings.backgroundcolor
-%}

<section class="welcome-banner-section" id="welcome-banner-section-{{ section.id }}">
  
  {%- comment -%} React Component Root {%- endcomment -%}
  <div data-component-root="WelcomeBanner" class="welcome-banner-container">
    
    {%- comment -%} JSON data for React - Script with data-section-data {%- endcomment -%}
    <script type="application/json" data-section-data>
      {
        "componentName": "WelcomeBanner",
        "title": {{ title | json }},
        "subtitle": {{ subtitle | json }},
        "backgroundColor": {{ backgroundcolor | json }},
        "settings": {
          "title": {{ title | json }},
          "subtitle": {{ subtitle | json }},
          "backgroundColor": {{ backgroundcolor | json }},
          "sectionId": "{{ section.id }}"
        }
      }
    </script>

    {%- comment -%} Fallback Content - Shows if JavaScript doesn't load {%- endcomment -%}
    <div class="welcome-banner-fallback">
      <div class="fallback-content">
        <p>Loading WelcomeBanner...</p>
      </div>
    </div>
  </div>
</section>

  {%- comment -%} Basic CSS for Fallback {%- endcomment -%}
<style>
  .welcome-banner-section {
    margin: 2rem 0;
  }

  .welcome-banner-container {
    max-width: 100%;
  }

  /* Fallback styles - hidden when React loads */
  .welcome-banner-fallback {
    display: block;
  }

  .welcome-banner-container:has(.welcome-banner) .welcome-banner-fallback {
    display: none;
  }

  .fallback-content {
    text-align: center;
    padding: 2rem;
    background: #f5f5f5;
    border-radius: 8px;
  }

  /* Loading state */
  .welcome-banner-container[data-component-root] {
    min-height: 200px;
    position: relative;
  }

  .welcome-banner-container[data-component-root]:not(:has(.welcome-banner))::after {
    content: "Loading WelcomeBanner...";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #666;
    font-size: 0.9rem;
  }
</style>